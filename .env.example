# Application
APP_NAME="Gestor Fiscal Personal"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# API
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"

# Database (CAMBIAR 'your_user' por tu usuario del sistema)
DATABASE_URL="postgresql://your_user@localhost:5432/sat_db"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_DB=1

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-this"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (for e.firma and sensitive documents)
ENCRYPTION_KEY="generate-with-cryptography-fernet"
DOCUMENT_ENCRYPTION_SALT="random-salt-for-documents"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# File Storage
STORAGE_TYPE="local"  # local, s3, minio
STORAGE_PATH="./storage"
MAX_UPLOAD_SIZE_MB=10

# AWS S3 (if using)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_BUCKET_NAME=""
AWS_REGION="us-east-1"

# MinIO (if using)
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY=""
MINIO_SECRET_KEY=""
MINIO_BUCKET_NAME="sat-documents"

# Celery
CELERY_BROKER_URL="redis://localhost:6379/2"
CELERY_RESULT_BACKEND="redis://localhost:6379/3"

# SAT Integration
SAT_BASE_URL="https://www.sat.gob.mx"
SAT_PORTAL_URL="https://portalcfdi.facturaelectronica.sat.gob.mx"
SAT_TIMEOUT_SECONDS=30
SAT_MAX_RETRIES=3

# Automation
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# OCR
OCR_ENGINE="tesseract"  # tesseract, google_vision
GOOGLE_VISION_API_KEY=""
TESSERACT_PATH="/usr/bin/tesseract"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@gestorfiscal.mx"

# SMS (for 2FA)
SMS_PROVIDER="twilio"  # twilio, vonage
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="INFO"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# PAC Integration (for CFDI)
PAC_ENABLED=false
PAC_PROVIDER=""
PAC_API_KEY=""
PAC_API_URL=""
